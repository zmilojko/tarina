= form_for @booh do |f|
  - if @booh.errors.any?
    #error_explanation
      %h2= "#{pluralize(@booh.errors.count, "error")} prohibited this booh from being saved:"
      %ul
        - @booh.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .actions
    = f.submit 'Save'
